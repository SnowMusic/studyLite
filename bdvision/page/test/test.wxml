<view class="page">
  <view class="img-poster">
    <image src="/image/play.png" wx:for="{{videos}}" bindtap="onPlayTap" wx:for-item="video" data-video-url="{{video.playUrl}}" 
     data-id="{{video.id}}"  class="play-icon"/>
    <image class="image" wx:for="{{videos}}" wx:for-item="video" src="{{video.coverForFeed}}" />
  </view>
  <video id="video" class="video" style="display: {{videoDisplay}}; top: {{coverTop}}px" src="{{currentUrl}}" />

  <!--<text class="desc-text" wx:for="{{videos}}" wx:for-item="video">{{video.desc}}</text>-->
</view>